{
  "manifest_version": 2,

  "name": "XMLViewer",
  "description": "View XMLs",
  "version": "1.0",

  "permissions": ["tabs"],
  "browser_action": {
    "default_icon": "img/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*.xml",
        "https://*/*.xml",
        "file:///*.xml"
      ],
      "js": ["scripts/content.js"]
    }
  ]
}